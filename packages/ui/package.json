{
  "name": "@nex/ui",
  "version": "0.0.1",
  "license": "MIT",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/index.css",
    "./card": {
      "import": "./dist/card.js",
      "require": "./dist/card.js",
      "types": "./dist/card.d.ts"
    },
    "./gradient": {
      "import": "./dist/gradient.js",
      "require": "./dist/gradient.js",
      "types": "./dist/gradient.d.ts"
    },
    "./turborepo-logo": {
      "import": "./dist/turborepo-logo.js",
      "require": "./dist/turborepo-logo.js",
      "types": "./dist/turborepo-logo.d.ts"
    }
  },
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsc --project tsconfig.json",
    "build": "npm run build:styles && npm run build:components",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "dev": "concurrently \"npm:dev:*\"",
    "lint": "eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/cli": "^4.1.5",
    "@types/react": "^19.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.28.0",
    "tailwindcss": "^4.1.5",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.514.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.4"
  }
}
